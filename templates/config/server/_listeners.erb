<% if @listeners                                          -%>
<%   @listeners.sort.each do |classname, options|         -%>
<%     options_string = ""                                -%>
<%     if options.is_a?(Hash) and not options.empty? then -%>
<%       options.sort.each do |key, value|                -%>
<%         options_string << " #{key}=\"#{value}\""       -%>
<%       end                                              -%>
<%     end                                                -%>
  <Listener classname="<%= classname %>"<%= options_string %> />
<%   end                                                  -%>
<% end                                                    -%>
